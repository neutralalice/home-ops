{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "security:openssf-scorecard",
    ":automergeBranch",
    ":automergeDigest",
    ":disableRateLimiting",
    ":semanticCommits",
    "github>neutralalice/home-ops//.github/renovate/autoMerge.json5",
    "github>neutralalice/home-ops//.github/renovate/changelogs.json5",
    "github>neutralalice/home-ops//.github/renovate/customManagers.json5",
    "github>neutralalice/home-ops//.github/renovate/grafanaDashboards.json5",
    "github>neutralalice/home-ops//.github/renovate/groups.json5",
    "github>neutralalice/home-ops//.github/renovate/labels.json5",
    "github>neutralalice/home-ops//.github/renovate/semanticCommits.json5",
  ],
  dependencyDashboardAutoclose: true,
  dependencyDashboardTitle: "Renovate Dashboard",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  flux: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"]
  },
  "helm-values": {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"]
  },
  kubernetes: {
    managerFilePatterns: ["/\\.yaml(?:\\.j2)?$/"]
  },
}
